@using ShoppingCart.Models.Models.Entities
@model IList<Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Shopping Cart</h1>
    <p class="lead">Shopping Cart is an online e-commerce store for selling products.</p>
</div>

<div class="row">
    <div class="col-md-4">
       @foreach (var p in Model)
       {
        <div>
            <h3>@p.Name</h3>
            @p.Description
            <h4>@p.Price.ToString("c")</h4>
        </div>
       }
    </div>
</div>
